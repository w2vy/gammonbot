#~/usr/bin/bash

cd /home/gammonbot

if [[ ! -r .cronbot ]]
then
   touch .cronbot
   if [[ -r botlist.pl ]] 
   then
      # We have our configuration
      if [[ ! -e .check_bot ]]
      then
         touch .check_bot
         /home/gammonbot/check_bot&
         rm -f .check_bot
      fi
   else
      echo "Waiting for config" > status.txt
   fi
   rm -f .cronbot
fi